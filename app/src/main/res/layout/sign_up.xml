<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back_arrw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="30dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:fontFamily="@font/open_sans_regular"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_arrow"
        android:text="Sign Up"
        android:textSize="36sp"
        android:textColor="#000000"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_first_name"
        android:drawableLeft="@drawable/person_icon"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/edittext_bg"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:layout_height="50dp"
        android:elevation="20dp"
        android:drawablePadding="10dp"
        android:hint="First Name"
        android:layout_marginTop="30dp"
        android:textColorHint="#A49F9F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:paddingLeft="20dp" />

    <androidx.appcompat.widget.AppCompatEditText
    android:id="@+id/input_last_name"
    android:drawableLeft="@drawable/person_icon"
    android:layout_marginStart="50dp"
        android:elevation="20dp"
    android:layout_marginEnd="50dp"
    android:background="@drawable/edittext_bg"
    android:layout_width="match_parent"
    android:paddingStart="20dp"
    android:layout_height="50dp"
    android:drawablePadding="10dp"
    android:hint="Second Name"
    android:layout_marginTop="30dp"
    android:textColorHint="#A49F9F"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/input_first_name"
    android:paddingLeft="20dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_email"
        android:drawableLeft="@drawable/email_ioon"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/edittext_bg"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:layout_height="50dp"
        android:drawablePadding="10dp"
        android:hint="Email Address"
        android:layout_marginTop="30dp"
        android:textColorHint="#A49F9F"
        android:elevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_last_name"
        android:paddingLeft="20dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_password"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/eye"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/edittext_bg"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:layout_height="50dp"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:elevation="20dp"
        android:textColorHint="#A49F9F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_email"
        android:paddingLeft="20dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_password2"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/eye"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/edittext_bg"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:layout_height="50dp"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:elevation="20dp"
        android:textColorHint="#A49F9F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_password"
        android:paddingLeft="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_in"
        android:background="@drawable/btn_bg"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="40dp"
        android:text="Sign Up"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/bgColor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_password2"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans_regular"
        android:layout_marginLeft="50dp" />
</androidx.constraintlayout.widget.ConstraintLayout>